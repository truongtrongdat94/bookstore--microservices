# Notification Service Environment Variables (Local Development)

# Server
NODE_ENV=development
PORT=3004

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5434
DB_NAME=bookstore_notifications
DB_USER=postgres
DB_PASSWORD=postgres

# RabbitMQ
RABBITMQ_URL=amqp://admin:dev_password@localhost:5672
RABBITMQ_EXCHANGE=bookstore_events
RABBITMQ_QUEUE_ORDER_CREATED=order.created
RABBITMQ_QUEUE_ORDER_UPDATED=order.updated

# Logging
LOG_LEVEL=info

# Service Name
SERVICE_NAME=notification-service
