# Order Service Environment Variables (Local Development)

# Server
NODE_ENV=development
PORT=3003

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=bookstore_orders
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://admin:dev_password@localhost:5672
RABBITMQ_EXCHANGE=bookstore_events
RABBITMQ_QUEUE_ORDER_CREATED=order.created
RABBITMQ_QUEUE_ORDER_UPDATED=order.updated

# External Service URLs
