{
  "name": "bookstore-microservices",
  "version": "1.0.0",
  "description": "Microservices architecture for bookstore e-commerce system",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "start": "docker-compose up --build",
    "stop": "docker-compose down",
    "stop:dev": "docker-compose -f docker-compose.dev.yml down",
    "clean": "docker-compose down -v --remove-orphans",
    "clean:dev": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans",
    "logs": "docker-compose logs -f",
    "logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "build": "npm run build --workspaces",
    "install:all": "npm install --workspaces",
    "setup": "./scripts/setup.sh",
    "health-check": "./scripts/test.sh",
    "docs:validate:all": "npm --workspace user-service run docs:validate && npm --workspace book-service run docs:validate && npm --workspace order-service run docs:validate && npm --workspace notification-service run docs:validate && npm --workspace api-gateway run docs:validate"
  },
  "workspaces": [
    "api-gateway",
    "user-service", 
    "book-service",
    "order-service",
    "notification-service"
  ],
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "docker",
    "postgresql",
    "redis",
    "rabbitmq",
    "jwt",
    "e-commerce",
    "bookstore"
  ],
  "author": "Microservices Academic Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}