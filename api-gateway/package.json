{
  "name": "bookstore-api-gateway",
  "version": "1.0.0", 
  "description": "API Gateway for Bookstore Microservices",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs:validate": "swagger-cli validate ./docs/openapi/openapi.yaml"
  },

  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.31"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "ts-jest": "^29.1.0",
    "jest": "^29.7.0",
    "fast-check": "^3.15.0",
    "nodemon": "^3.0.0",
    "swagger-cli": "^4.0.4"
  },

  "engines": {
    "node": ">=18.0.0"
  }
}