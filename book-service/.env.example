# Book Service Environment Variables (Local Development)

# Server
NODE_ENV=development
PORT=3002

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bookstore_books
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
