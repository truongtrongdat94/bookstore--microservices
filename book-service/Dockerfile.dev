FROM node:18-alpine

WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port (will be overridden in docker-compose)
EXPOSE 3001

# Start with nodemon for development
CMD ["npm", "run", "dev"]
